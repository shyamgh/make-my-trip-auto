	public void HandleSpecialSearchPopup()
	{
        wd.findElement(By.xpath("//div[@id='popBusSearch']//button[normalize-space(.)='Search Bus']")).click();
        new Actions(wd).doubleClick(wd.findElement(By.xpath("//div[@id='content']/div[5]/div[2]/div"))).build().perform();
        
        wd.findElement(By.cssSelector("div.ng-scope")).click();
        wd.findElement(By.linkText("Select Bus")).click();
        wd.findElement(By.cssSelector("a.close_popup")).click();
	}   
 
	public void SelectBusName(String bName, String seatNum)
	{
		//wd.findElement(By.xpath("//div[@class='bus_listing']//p[.='"+bName+"']")).click();
