	    UseLogger tester = new UseLogger();
	    try {
	      MyLogger.setup();
	    } catch (IOException e) {
	      e.printStackTrace();
	      throw new RuntimeException("Problems with creating the log files");
	    }
	    tester.doSomeThingAndLog();
	  }

}
 